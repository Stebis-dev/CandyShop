<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.CandyShop.controllers.mainshop.ProductController">

    <ListView fx:id="productListManager" layoutX="16.0" layoutY="14.0" onMouseClicked="#loadProductData"
              prefHeight="312.0" prefWidth="244.0"/>
    <TextField fx:id="productTitleField" layoutX="276.0" layoutY="14.0" prefHeight="26.0" prefWidth="305.0"
               promptText="Title"/>
    <TextArea fx:id="productDescriptionField" layoutX="276.0" layoutY="159.0" prefHeight="54.0" prefWidth="306.0"
              promptText="Description"/>
    <TextField fx:id="productManufacturerField" layoutX="277.0" layoutY="50.0" prefHeight="26.0" prefWidth="305.0"
               promptText="Manufacturer"/>
    <ComboBox fx:id="productType" layoutX="276.0" layoutY="86.0" onAction="#enableProductFields" prefHeight="26.0"
              prefWidth="306.0" promptText="Product Type"/>
    <TextField fx:id="weightField" layoutX="277.0" layoutY="125.0" prefHeight="26.0" prefWidth="305.0"
               promptText="Weight"/>
    <TextArea fx:id="chemicalDescriptionField" layoutX="277.0" layoutY="226.0" prefHeight="98.0" prefWidth="306.0"
              promptText="Chemical description"/>
    <Button layoutX="509.0" layoutY="339.0" mnemonicParsing="false" onAction="#addNewProduct" prefHeight="26.0"
            prefWidth="73.0" text="Add new"/>
    <Button layoutX="16.0" layoutY="339.0" mnemonicParsing="false" onAction="#updateProduct" prefHeight="26.0"
            prefWidth="58.0" text="Update"/>
    <Button layoutX="84.0" layoutY="339.0" mnemonicParsing="false" onAction="#deleteProduct" prefHeight="26.0"
            prefWidth="58.0" text="Delete"/>
</AnchorPane>
