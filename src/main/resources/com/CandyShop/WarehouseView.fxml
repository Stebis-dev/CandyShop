<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.CandyShop.controllers.mainshop.WarehouseController"
            prefHeight="400.0" prefWidth="600.0">
    <ListView fx:id="warehouseList" layoutX="19.0" layoutY="160.0"
              onMouseClicked="#loadWarehouseData" prefHeight="196.0" prefWidth="170.0"/>
    <Button layoutX="105.0" layoutY="46.0" mnemonicParsing="false"
            onAction="#addNewWarehouse" prefHeight="26.0" prefWidth="88.0" text="Add"/>
    <Button layoutX="17.0" layoutY="14.0" mnemonicParsing="false"
            onAction="#updateWarehouse" prefHeight="26.0" prefWidth="176.0"
            text="Update warehouse"/>
    <Button layoutX="17.0" layoutY="46.0" mnemonicParsing="false"
            onAction="#removeWarehouse" prefHeight="26.0" prefWidth="80.0" text="Delete"/>
    <TextField fx:id="addressWarehouseField" layoutX="19.0" layoutY="122.0"
               prefHeight="26.0" prefWidth="169.0" promptText="Address"/>
    <TextField fx:id="titleWarehouseField" layoutX="19.0" layoutY="84.0" prefHeight="26.0"
               prefWidth="172.0" promptText="Title"/>
    <ListView fx:id="assignedProducts" layoutX="202.0" layoutY="46.0"
              onMouseClicked="#loadWarehouseInventoryData" prefHeight="306.0"
              prefWidth="186.0"/>
    <ListView fx:id="notAssignedProducts" layoutX="397.0" layoutY="118.0" prefHeight="230.0"
              prefWidth="194.0"/>
    <Button layoutX="397.0" layoutY="46.0" mnemonicParsing="false"
            onAction="#removeProductFromInventory" prefHeight="26.0" prefWidth="97.0"
            text="Delete product"/>
    <Button layoutX="503.0" layoutY="46.0" mnemonicParsing="false"
            onAction="#addProductToInventory" prefHeight="26.0" prefWidth="86.0"
            text="Add product"/>
    <TextField fx:id="productAmount" layoutX="398.0" layoutY="84.0" prefHeight="26.0"
               prefWidth="192.0" promptText="Amount"/>
    <Button layoutX="398.0" layoutY="14.0" mnemonicParsing="false"
            onAction="#updateInventory" prefHeight="26.0" prefWidth="193.0"
            text="Update inventory"/>
    <Label layoutX="239.0" layoutY="18.0" text="Warehouse inventory"/>
</AnchorPane>
