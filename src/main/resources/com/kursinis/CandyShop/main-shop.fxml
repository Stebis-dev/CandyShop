<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.CandyShop.fxControllers.MainShopController">
    <children>
        <TabPane fx:id="tabPane" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE"
                 AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0">
            <tabs>
                <Tab fx:id="primaryTab" onSelectionChanged="#loadTabValues" text="Products">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="productList" layoutX="14.0" layoutY="14.0" prefHeight="349.0"
                                          prefWidth="276.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="14.0"
                                          AnchorPane.rightAnchor="310.0" AnchorPane.topAnchor="14.0"/>
                                <Button layoutX="300.0" layoutY="14.0" mnemonicParsing="false" onAction="#leaveComment"
                                        text="Leave a comment"/>
                                <Button layoutX="547.0" layoutY="14.0" mnemonicParsing="false" onAction="#addToCart"
                                        text="Add"/>
                                <ListView fx:id="currentOrder" layoutX="301.0" layoutY="48.0" prefHeight="312.0"
                                          prefWidth="285.0"/>
                                <Button layoutX="487.0" layoutY="14.0" mnemonicParsing="false"
                                        onAction="#deleteFromCart" text="Delete"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="usersTab" onSelectionChanged="#loadTabValues" text="Users">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TableView fx:id="customerTable" layoutX="14.0" layoutY="14.0" prefHeight="178.0"
                                           prefWidth="578.0">
                                    <columns>
                                        <TableColumn fx:id="customerTableName" prefWidth="126.4000244140625"
                                                     text="Name"/>
                                        <TableColumn fx:id="customerTableSurname" prefWidth="116.0" text="Surname"/>
                                        <TableColumn fx:id="customerTableBirthdate" prefWidth="82.4000244140625"
                                                     text="Birth date"/>
                                        <TableColumn fx:id="customerTableAddress" prefWidth="117.5999755859375"
                                                     text="Address"/>
                                        <TableColumn fx:id="customerTableCardnumber" prefWidth="133.60001220703123"
                                                     text="Card number"/>
                                    </columns>
                                </TableView>
                                <TableView fx:id="managerTable" layoutX="14.0" layoutY="199.0" prefHeight="158.0"
                                           prefWidth="578.0">
                                    <columns>
                                        <TableColumn fx:id="managerEmployeeId" prefWidth="81.5999755859375"
                                                     text="Employee Id"/>
                                        <TableColumn fx:id="managerTableName" prefWidth="91.20001220703125"
                                                     text="Name"/>
                                        <TableColumn fx:id="managerTableSurname" prefWidth="102.39996337890625"
                                                     text="Surname"/>
                                        <TableColumn fx:id="managerBirthdate" prefWidth="76.0" text="Birth date"/>
                                        <TableColumn fx:id="managerTableMedicalCertificate"
                                                     prefWidth="112.79998779296875" text="Medical certificate"/>
                                        <TableColumn fx:id="managerTableEmploymentDate" prefWidth="114.4000244140625"
                                                     text="Employment Date"/>
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="warehouseTab" onSelectionChanged="#loadTabValues" text="Warehouse">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="warehouseList" layoutX="20.0" layoutY="51.0"
                                          onMouseClicked="#loadWarehouseData" prefHeight="256.0" prefWidth="560.0"/>
                                <Button layoutX="506.0" layoutY="332.0" mnemonicParsing="false"
                                        onAction="#addNewWarehouse" prefHeight="26.0" prefWidth="79.0" text="Add new"/>
                                <Button layoutX="20.0" layoutY="332.0" mnemonicParsing="false"
                                        onAction="#updateWarehouse" prefHeight="26.0" prefWidth="60.0" text="Update"/>
                                <Button layoutX="88.0" layoutY="332.0" mnemonicParsing="false"
                                        onAction="#removeWarehouse" prefHeight="26.0" prefWidth="65.0" text="Delete"/>
                                <TextField fx:id="addressWarehouseField" layoutX="188.0" layoutY="14.0"
                                           promptText="Address"/>
                                <TextField fx:id="titleWarehouseField" layoutX="20.0" layoutY="14.0"
                                           promptText="Title"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="productsTab" onSelectionChanged="#loadTabValues" text="Product">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="productListManager" layoutX="19.0" layoutY="7.0"
                                          onMouseClicked="#loadProductData" prefHeight="312.0" prefWidth="244.0"/>
                                <TextField fx:id="productTitleField" layoutX="280.0" layoutY="14.0" prefHeight="26.0"
                                           prefWidth="305.0" promptText="Title"/>
                                <TextArea fx:id="productDescriptionField" layoutX="280.0" layoutY="194.0"
                                          prefHeight="18.0" prefWidth="306.0" promptText="Description"/>
                                <TextField fx:id="productManufacturerField" layoutX="280.0" layoutY="49.0"
                                           prefHeight="26.0" prefWidth="305.0" promptText="Manufacturer"/>
                                <ComboBox fx:id="productType" layoutX="280.0" layoutY="83.0"
                                          onAction="#enableProductFields" prefHeight="26.0" prefWidth="306.0"
                                          promptText="Product Type"/>
                                <ComboBox fx:id="warehouseComboBox" layoutX="280.0" layoutY="156.0" prefHeight="26.0"
                                          prefWidth="306.0" promptText="Warehouse"/>
                                <TextField fx:id="weightField" layoutX="280.0" layoutY="118.0" prefHeight="26.0"
                                           prefWidth="305.0" promptText="Weight"/>
                                <TextArea fx:id="chemicalDescriptionField" layoutX="280.0" layoutY="242.0"
                                          prefHeight="78.0" prefWidth="305.0" promptText="Chemical description"/>
                                <Button layoutX="512.0" layoutY="332.0" mnemonicParsing="false"
                                        onAction="#addNewProduct" prefHeight="26.0" prefWidth="73.0" text="Add new"/>
                                <Button layoutX="19.0" layoutY="332.0" mnemonicParsing="false" onAction="#updateProduct"
                                        prefHeight="26.0" prefWidth="58.0" text="Update"/>
                                <Button layoutX="87.0" layoutY="332.0" mnemonicParsing="false" onAction="#deleteProduct"
                                        prefHeight="26.0" prefWidth="58.0" text="Delete"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="commentTab" onSelectionChanged="#loadTabValues" text="Comments">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="commentTitleField" layoutX="331.0" layoutY="35.0" prefHeight="26.0"
                                           prefWidth="251.0" promptText="Title"/>
                                <TextArea fx:id="commentBodyField" layoutX="332.0" layoutY="68.0" prefHeight="251.0"
                                          prefWidth="251.0" promptText="Description"/>
                                <ListView fx:id="commentListField" layoutX="14.0" layoutY="10.0"
                                          onMouseClicked="#loadCommentInfo" prefHeight="311.0" prefWidth="293.0"/>
                                <Button layoutX="546.0" layoutY="333.0" mnemonicParsing="false"
                                        onAction="#createComment" text="Add"/>
                                <Button layoutX="15.0" layoutY="333.0" mnemonicParsing="false" onAction="#updateComment"
                                        text="Update"/>
                                <Button layoutX="77.0" layoutY="333.0" mnemonicParsing="false" onAction="#deleteComment"
                                        text="Delete"/>
                                <Label fx:id="productCommentLabel" layoutX="332.0" layoutY="10.0" prefHeight="18.0"
                                       prefWidth="249.0" text="Product"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
